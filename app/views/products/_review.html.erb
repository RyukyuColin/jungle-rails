<% if review = Review.find_by(id: product_id) %>
<% user = User.find(review.user_id) %>

<div class="row">
  <div class="review">
    <ul>
      <li>Descrition: <%= review.description %> </li>
      <li>Rating: <%= review.rating %> </li>
      <li>User: <%= user.first_name %> </li>
    </ul>
    <% if current_user == user %>
      <%= link_to 'Delete Review', review, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>


<% end %>