<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row" class="product-description">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>

    <div class="row">
    <div class="col-sm-5">
    <% if current_user %>

    <h3>Review this product</h3>

     <%= form_for([@product, @new_review]) do |f| %>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %><br>
        <%= f.label :rating %>
        <%= f.select :rating, [1, 2, 3, 4, 5] %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
  </div>
    <% end %>
    <div class="row">
      <div class="col-sm-5">

        <h3>Reviews</h3>

        <% @review.each do |product_id| %>
          <%= render 'review', product_id: product_id %>
          <% end %>
        <% end %>


        <% if !current_user %>

          <h3>Reviews</h3>

          <% @review.each do |product_id| %>
            <%= render 'review', product_id: product_id %>
          <% end %>
        <% end %>
    </div>
  </div>
  </article>
</section>
